
<div class="row">
  
    <h1>Future Events</h1>
  
  <div class='event-body'>
  <% Event.upcoming.each do |event| %>
    <div class='event'>

      <h3 class='featurette-heading'><%= event.title%></h3>
      <div class='event-body'>
      <p><%= event.description %></p>
      <div class='event-details'>
        <span>Event location: <%= event.location %></span>
        <span>Event date: <%= event.date.strftime("%Y/%m/%d") %><span>
      </div>
      </div>
      </div>
  <% end %>
</div>

<div class="row">
  
    <h1>Past Events</h1>
  
  <div class='event-body'>
  <%  Event.past.each do |event| %>
    <div class='event'>
