      <p><%= event.description %></p>
      <div class='event-details'>
        <span>Event location: <%= event.location %></span>
        <span>Event date: <%= event.date.strftime("%Y/%m/%d") %><span>
      </div>
      </div>
      </div>
  <% end %>
</div>




