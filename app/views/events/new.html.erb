<div class="row">
  <div class="col-md-6 form-new-user col-md-offset-3">
    
      <%= form_for(@event) do |f| %>
        <%= f.label :title %><br>
        <%= f.text_area :title, class: "form-control" %><br>
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control" %><br>
        <%= f.label :location %><br>
        <%= f.text_area :location, class: "form-control" %><br>
        <%= f.label :date %><br>
        <%= f.date_field :date, class: "form-control" %><br>
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      <% end %> 
  </div>
</div> 